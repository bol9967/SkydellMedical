<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_referral_reward_tree" model="ir.ui.view">
        <field name="name">referral.reward.list</field>
        <field name="model">referral.reward</field>
        <field name="arch" type="xml">
            <list string="Referral Rewards">
                <field name="doctor_1_id"/>
                <field name="referred_doctor_id"/>
                <field name="sale_order_id"/>
                <field name="vials_purchased"/>
                <field name="reward_type"/>
                <field name="state"/>
                <field name="granted_date"/>
                <field name="reward_order_id"/>
            </list>
        </field>
    </record>

    <record id="view_referral_reward_form" model="ir.ui.view">
        <field name="name">referral.reward.form</field>
        <field name="model">referral.reward</field>
        <field name="arch" type="xml">
            <form string="Referral Reward">
                <header>
                    <button name="action_grant_reward" 
                            string="Grant Reward" 
                            type="object" 
                            class="btn-primary"
                            invisible="state != 'pending'"/>
                    <button name="action_cancel" 
                            string="Cancel" 
                            type="object" 
                            invisible="state in ['granted', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,granted"/>
                </header>
                <sheet>
                    <group>
                        <group string="Reward Information">
                            <field name="doctor_1_id" required="1"/>
                            <field name="referred_doctor_id" required="1"/>
                            <field name="sale_order_id" required="1"/>
                            <field name="vials_purchased"/>
                            <field name="reward_type"/>
                        </group>
                        <group string="Reward Details">
                            <field name="product_id" required="1"/>
                            <field name="quantity"/>
                            <field name="granted_date" readonly="1"/>
                            <field name="granted_by_id" readonly="1"/>
                            <field name="reward_order_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_referral_reward_search" model="ir.ui.view">
        <field name="name">referral.reward.search</field>
        <field name="model">referral.reward</field>
        <field name="arch" type="xml">
            <search string="Referral Rewards">
                <field name="doctor_1_id"/>
                <field name="referred_doctor_id"/>
                <field name="sale_order_id"/>
                <field name="state"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Granted" name="granted" domain="[('state', '=', 'granted')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Doctor 1" name="group_by_doctor_1" context="{'group_by': 'doctor_1_id'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_referral_reward" model="ir.actions.act_window">
        <field name="name">Referral Rewards</field>
        <field name="res_model">referral.reward</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No referral rewards yet!
            </p>
            <p>
                Rewards are automatically created when referred doctors make qualifying purchases.
            </p>
        </field>
    </record>
</odoo>
