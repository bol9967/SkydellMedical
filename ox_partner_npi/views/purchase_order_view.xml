<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the Purchase Order form view -->
    <record id="purchase_order_form_inherit_npi" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.npi</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Add Vendor NPI right after partner_id -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_npi"
                       readonly="True"
                       placeholder="NPI #"
                       invisible="not partner_npi"/>
            </xpath>
        </field>
    </record>
</odoo>
