<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_tracking_reminder" model="ir.cron">
            <field name="name">PO Tracking: Send Missing Tracking Reminders</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="state">code</field>
            <field name="code">model.cron_followup_missing_tracking()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(minutes=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="priority">5</field>
            <field name="active" eval="True"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="ir_cron_fedex_update_tracking" model="ir.cron">
            <field name="name">FedEx: Update Tracking Status</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_fedex_tracking()</field>
            <!-- run every 2 hours, adjust as needed -->
            <field name="interval_number">2</field>
            <field name="interval_type">hours</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(minutes=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="priority">6</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
