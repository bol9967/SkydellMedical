<odoo>
    <record id="view_res_config_settings_peptide" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.peptide</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Insert right after the existing Shipping block -->
            <xpath expr="//block[@name='sale_shipping_setting_container']" position="after">
                <block title="Peptide Shipping &amp; Discount" name="peptide_shipping_setting_container">
                    <setting id="peptide_category_setting"
                             string="Peptide eCommerce Category"
                             help="Select the eCommerce category used for Peptide products.">
                        <field name="peptide_category_id"/>
                    </setting>
                    <setting id="enable_peptide_discount_setting"
                             string="Enable Peptide Discount"
                             help="Enable automatic discount for peptide orders above threshold.">
                        <field name="enable_peptide_discount"/>
                    </setting>
                    <setting id="peptide_discount_percentage_setting"
                             string="Peptide Discount Percentage"
                             help="Discount percentage to apply for peptide orders above threshold (e.g., 10.0 for 10%).">
                        <field name="peptide_discount_percentage" invisible="not enable_peptide_discount" required="enable_peptide_discount"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
