<odoo noupdate="1">
    <record id="ir_cron_maildesk_cache_gc" model="ir.cron">
        <field name="name">MailDesk Cache GC</field>
        <field name="model_id" ref="model_maildesk_message_cache"/>
        <field name="state">code</field>
        <field name="code">model.cron_gc(hard=False, batch=2000)</field>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
    </record>

    <record id="ir_cron_maildesk_cache_warmup" model="ir.cron">
        <field name="name">MailDesk Cache Warmup</field>
        <field name="model_id" ref="model_maildesk_message_cache"/>
        <field name="state">code</field>
        <field name="code">model.cron_warmup()</field>
        <field name="interval_number">3</field>
        <field name="interval_type">minutes</field>
    </record>

    <record id="ir_cron_maildesk_cache_import" model="ir.cron">
        <field name="name">MailDesk: Import to Odoo</field>
        <field name="model_id" ref="model_maildesk_message_cache"/>
        <field name="state">code</field>
        <field name="code">model.cron_import_to_odoo(batch=40, max_attempts=5)</field>
        <field name="interval_number">2</field>
        <field name="interval_type">minutes</field>
    </record>
</odoo>
