<odoo>

    <record id="view_mail_message_tag_tree" model="ir.ui.view">
        <field name="name">mail.message.tag.tree</field>
        <field name="model">mail.message.tag</field>
        <field name="arch" type="xml">
            <list string="Message Tags" editable="bottom">
                <field name="name" />
                <field name="color" widget="color" />
            </list>
        </field>
    </record>

    <record id="action_mail_message_tag" model="ir.actions.act_window">
        <field name="name">Message Tags</field>
        <field name="res_model">mail.message.tag</field>
        <field name="view_mode">list</field>
        <field name="context">{}</field>
    </record>

</odoo>
