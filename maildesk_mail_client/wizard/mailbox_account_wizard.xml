<odoo>
    <record id="view_mailbox_account_wizard_form" model="ir.ui.view">
        <field name="name">mailbox.account.wizard.form</field>
        <field name="model">mailbox.account.wizard</field>
        <field name="arch" type="xml">
            <form string="Connect to Mailbox">
                <group>
                    <field name="email" />
                    <field name="password" password="True" />
                </group>
                <footer>
                    <button
            name="action_connect_mailbox"
            type="object"
            string="Connect"
            class="btn-primary"
          />
                    <button string="Cancel" special="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mailbox_account_wizard" model="ir.actions.act_window">
        <field name="name">Connect to Mailbox</field>
        <field name="res_model">mailbox.account.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
