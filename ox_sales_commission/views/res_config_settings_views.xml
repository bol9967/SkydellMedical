<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit res.config.settings view to add Manager Commission option -->
    <record id="res_config_settings_view_form_inherit_manager_commission" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.manager.commission</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Add the option in the Sales section -->
            <xpath expr="//block[@name='sale_shipping_setting_container']" position="after">
                <block title="Commission Settings" name="commission_setting_container">
                    <setting id="enable_manager_commission_setting" 
                             string="Enable Manager Commission" 
                             help="When enabled, sales team managers will receive commission on sales made by their team members. Manager commission rates are configured in the Commission Plans. When disabled, only salesperson and admin commissions will be calculated.">
                        <field name="enable_manager_commission"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
