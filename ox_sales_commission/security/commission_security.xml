<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Commission User Group -->
    <record id="group_commission_sale_user" model="res.groups">
        <field name="name">Commission Sale User</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="comment">Can view and track their own commissions</field>
    </record>

    <!-- Commission Admin Group -->
    <record id="group_commission_sale_admin" model="res.groups">
        <field name="name">Commission Sale Administrator</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('group_commission_sale_user'))]"/>
        <field name="comment">Full access to commission management</field>
    </record>
    
    <!-- Record Rules -->

    <record id="commission_plan_admin_rule" model="ir.rule">
        <field name="name">Commission Plan: Admin sees all</field>
        <field name="model_id" ref="model_commission_plan"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_commission_sale_admin'))]"/>
    </record>

    <record id="commission_plan_user_rule" model="ir.rule">
        <field name="name">Commission Plan: User can only see their plans</field>
        <field name="model_id" ref="model_commission_plan"/>
        <field name="domain_force">[('salesperson_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('group_commission_sale_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="commission_tracking_user_rule" model="ir.rule">
        <field name="name">Commission Tracking: User sees own commissions</field>
        <field name="model_id" ref="model_commission_tracking"/>
        <field name="domain_force">[('salesperson_id', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('group_commission_sale_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="commission_tracking_admin_rule" model="ir.rule">
        <field name="name">Commission Tracking: Admin sees all</field>
        <field name="model_id" ref="model_commission_tracking"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_commission_sale_admin'))]"/>
    </record>
</odoo>